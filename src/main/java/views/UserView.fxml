                        <HBox id="jobsContainer" alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Experience">
                                 <font>
                                    <Font size="36.0" />
                                 </font>
                              </Label>
                              <Button id="addJobButton" fx:id="addJobButton" contentDisplay="TEXT_ONLY" mnemonicParsing="false" text="Add">
                                 <graphic>
                                    <ImageView fitHeight="150.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../plus.circle.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                           </children>
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </HBox>
                        <VBox id="addJobContainer" fx:id="addJobContainer">
                           <children>
                              <HBox prefHeight="100.0" prefWidth="200.0" spacing="10.0">
                                 <children>
                                    <ChoiceBox id="companySelector" fx:id="companySelector" layoutX="180.0" layoutY="10.0" prefWidth="150.0" />
                                    <TextField id="jobTitleTextField" fx:id="jobTitleTextField" promptText="Title" />
                                    <Button id="submitJobButton" fx:id="submitJobButton" mnemonicParsing="false" onAction="#onClickSubmitJob" text="Submit" />
                                    <Button id="cancelJobButton" fx:id="cancelJobButton" cancelButton="true" mnemonicParsing="false" onAction="#onClickCancelJob" text="Cancel" />
                                 </children>
                              </HBox>
                              <TextArea id="jobDescriptionTextArea" fx:id="jobDescriptionTextArea" maxWidth="-Infinity" prefHeight="41.0" prefWidth="452.0" promptText="Description" />
                           </children>
                        </VBox>
                        <ListView id="jobsList" fx:id="jobsList" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </VBox>
                  <VBox id="skillsContainer" fx:id="skillsContainer" layoutX="30.0" layoutY="399.0" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
                     <children>
                        <HBox alignment="CENTER_LEFT" spacing="10.0">
                           <children>
                              <Label text="Skills">
                                 <font>
                                    <Font size="36.0" />
                                 </font>
                              </Label>
                              <Button id="addSkillButton" fx:id="addSkillButton" contentDisplay="TEXT_ONLY" mnemonicParsing="false" text="Add">
                                 <graphic>
                                    <ImageView fitHeight="150.0" fitWidth="20.0" pickOnBounds="true" preserveRatio="true">
                                       <image>
                                          <Image url="@../plus.circle.png" />
                                       </image>
                                    </ImageView>
                                 </graphic>
                              </Button>
                           </children>
                           <VBox.margin>
                              <Insets top="20.0" />
                           </VBox.margin>
                        </HBox>
                        <HBox id="addSkillContainer" fx:id="addSkillContainer" prefHeight="100.0" prefWidth="200.0" spacing="10.0">
