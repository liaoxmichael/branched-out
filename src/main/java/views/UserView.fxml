<ScrollPane hbarPolicy="NEVER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="700.0" minWidth="1200.0" prefHeight="700.0" prefWidth="1200.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="views.UserController">
   <content>
      <VBox>
         <children>
            <StackPane alignment="TOP_LEFT">
               <children>
                  <ImageView fx:id="bannerImage" fitHeight="150.0" fitWidth="1199.0" pickOnBounds="true" preserveRatio="true">
                     <StackPane.margin>
                        <Insets />
                     </StackPane.margin>
                  </ImageView>
                  <Button id="editProfileButton" fx:id="editProfileButton" contentDisplay="TEXT_ONLY" mnemonicParsing="false" onAction="#onClickEdit" text="Edit" StackPane.alignment="TOP_RIGHT">
