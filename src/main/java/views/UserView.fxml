                              <StackPane alignment="TOP_LEFT">
                                 <children>
                                    <TextField id="nameTextField" fx:id="nameTextField" maxHeight="-Infinity" prefHeight="100.0" prefWidth="240.0" promptText="Name">
                                       <font>
                                          <Font size="47.0" />
                                       </font>
                                    </TextField>
                                    <Label id="nameLabel" fx:id="nameLabel" text="Name">
                                       <font>
                                          <Font size="64.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </StackPane>
                              <HBox>
                                 <children>
                                    <Label text="(">
                                       <font>
                                          <Font size="36.0" />
                                       </font>
                                    </Label>
                                    <StackPane alignment="TOP_LEFT">
                                       <children>
                                          <TextField id="pronounsTextField" fx:id="pronounsTextField" prefHeight="64.0" prefWidth="200.0" promptText="pronouns">
                                             <font>
                                                <Font size="31.0" />
                                             </font>
                                          </TextField>
                                          <Label id="pronounsLabel" fx:id="pronounsLabel" text="pro/nouns">
                                             <font>
                                                <Font size="36.0" />
                                             </font>
                                          </Label>
                                       </children>
                                    </StackPane>
                                    <Label text=")">
                                       <font>
                                          <Font size="36.0" />
                                       </font>
                                    </Label>
                                 </children>
                                 <HBox.margin>
                                    <Insets top="22.0" />
                                 </HBox.margin>
                              </HBox>
                           </children>
                           <padding>
                              <Insets top="10.0" />
                           </padding>
                        </HBox>
                        <VBox alignment="TOP_RIGHT" style="-fx-border-color: black;" GridPane.columnIndex="1">
                           <children>
                              <HBox id="followersContainer" fx:id="followersContainer" onMouseClicked="#onClickFollowers">
                                 <children>
                                    <Label id="numFollowersLabel" fx:id="numFollowersLabel" text="#">
                                       <font>
                                          <Font size="36.0" />
                                       </font>
                                    </Label>
                                    <Label layoutX="10.0" layoutY="10.0" text=" Followers">
                                       <font>
                                          <Font size="36.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </HBox>
                              <HBox id="followingContainer" fx:id="followingContainer" layoutX="10.0" layoutY="10.0" onMouseClicked="#onClickFollowing">
                                 <children>
                                    <Label id="numFollowingLabel" fx:id="numFollowingLabel" text="#">
                                       <font>
                                          <Font size="36.0" />
                                       </font>
                                    </Label>
                                    <Label layoutX="10.0" layoutY="10.0" text=" Following">
                                       <font>
                                          <Font size="36.0" />
                                       </font>
                                    </Label>
                                 </children>
                              </HBox>
                           </children>
                           <padding>
                              <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
                           </padding>
                        </VBox>
                        <StackPane alignment="CENTER_LEFT" GridPane.rowIndex="1">
                           <children>
                              <TextArea id="biographyTextArea" fx:id="biographyTextArea" maxWidth="-Infinity" prefHeight="39.0" prefWidth="470.0" promptText="Biography" />
                              <Label id="bioLabel" fx:id="bioLabel" text="Bio" wrapText="true">
                                 <font>
                                    <Font size="24.0" />
                                 </font>
                              </Label>
                           </children>
                        </StackPane>
                     </children>
                  </GridPane>
                  <VBox id="jobsContainer" fx:id="jobsContainer" prefHeight="200.0" prefWidth="100.0" spacing="10.0">
