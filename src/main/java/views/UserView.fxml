                              <ChoiceBox id="skillSelector" fx:id="skillSelector" layoutX="180.0" layoutY="10.0" prefWidth="150.0" />
                              <ChoiceBox id="proficiencyLevelSelector" fx:id="proficiencyLevelSelector" prefWidth="150.0" />
                              <Button id="submitSkillButton" fx:id="submitSkillButton" mnemonicParsing="false" onAction="#onClickSubmitSkill" text="Submit" />
                              <Button id="cancelSkillButton" fx:id="cancelSkillButton" cancelButton="true" mnemonicParsing="false" onAction="#onClickCancelSkill" text="Cancel" />
                           </children>
                        </HBox>
                        <ListView id="skillsList" fx:id="skillsList" prefHeight="200.0" prefWidth="200.0" />
                     </children>
                  </VBox>
               </children>
               <padding>
                  <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
               </padding>
            </VBox>
         </children>
