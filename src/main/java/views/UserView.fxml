                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                     </StackPane.margin>
                     <graphic>
                        <ImageView fitHeight="150.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true">
                           <image>
                              <Image url="@../pencil.circle.png" />
                           </image>
                        </ImageView>
                     </graphic>
                  </Button>
                  <Circle fill="#1f93ff" radius="100.0" stroke="BLACK" strokeType="INSIDE">
                     <StackPane.margin>
                        <Insets left="50.0" top="50.0" />
                     </StackPane.margin>
                  </Circle>
                  <ImageView id="profileImage" fx:id="profileImage" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                     <StackPane.margin>
                        <Insets left="50.0" top="50.0" />
                     </StackPane.margin>
                  </ImageView>
               </children>
            </StackPane>
            <VBox prefHeight="200.0">
               <children>
                  <GridPane VBox.vgrow="ALWAYS">
                     <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" />
